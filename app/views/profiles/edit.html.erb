
<h1>Editar Perfil</h1>

<%= form_with model: @profile, url: profile_path, method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :username, "Nombre de Usuario" %>
    <%= f.text_field :username, class: "form-control", maxlength: 12 %>
    <small>Máximo 12 caracteres.</small>
  </div>

  <div class="form-group">
    <%= f.label :bio, "Biografía" %>
    <%= f.text_area :bio, class: "form-control", maxlength: 160 %>
    <small>Máximo 160 caracteres.</small>
  </div>

  <h3>Redes Sociales</h3>
  <div class="form-group">
    <%= f.label :twitter, "Twitter" %>
    <%= f.text_field :twitter, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :facebook, "Facebook" %>
    <%= f.text_field :facebook, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :instagram, "Instagram" %>
    <%= f.text_field :instagram, class: "form-control" %>
  </div>

  <%= f.submit "Guardar Cambios", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Cancelar', profile_path, class: "btn btn-secondary" %>
