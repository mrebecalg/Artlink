<div class="login-container">
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% elsif flash[:notice] %>
    <div class="alert alert-info">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <h2 class="login-title">Iniciar Sesi칩n</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, "Correo Electr칩nico", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Contrase침a", class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, "Recordarme", class: "form-check-label" %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.submit "Iniciar Sesi칩n", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <p class="signup-link">
    <%= link_to "Sign up", new_user_registration_path %>
  </p>
</div>


